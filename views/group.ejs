<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Group / <%= name %>
            <button id="edit_group" type="button" class="btn btn-primary" data-toggle="modal" data-target="#editGroup">Edit Group</button>
            <button id="new_thread" type="button" class="btn btn-primary" data-toggle="modal" data-target="#newThread">New Thread</button>
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="modal fade" id="editGroup" tabindex="-1" role="dialog" aria-labelledby="modGroup" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title" id="modGroup">Edit Group</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label>Group name</label>
                        <input id="g_name" class="form-control" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input id="g_desc" class="form-control" placeholder="Description">
                    </div>
                    <div class="form-group" style="position:relative;">
                        <label>Members</label>
                        <p id="m_list"class="help-block"></p>
                        <div style="position:relative;">
                            <input id="member-box" type="text" class="form-control" placeholder="Add Member">
                            <div id="member-res" class="search-res"></div>
                        </div>
                    </div>
                </form>
            </div>
            <div id="g-error" class='alert alert-danger' style="display: none; margin-bottom: 0"></div>
            <div id="g-success" class='alert alert-success' style="display: none; margin-bottom: 0"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button id="btn-create" type="button" class="btn btn-primary">Create</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<div class="modal fade" id="newThread" tabindex="-1" role="dialog" aria-labelledby="createThread" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title" id="createThread">New Thread</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label>Group name</label>
                        <input id="g_name" class="form-control" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input id="g_desc" class="form-control" placeholder="Description">
                    </div>
                    <div class="form-group" style="position:relative;">
                        <label>Members</label>
                        <p id="m_list"class="help-block"></p>
                        <div style="position:relative;">
                            <input id="member-box" type="text" class="form-control" placeholder="Add Member">
                            <div id="member-res" class="search-res"></div>
                        </div>
                    </div>
                </form>
            </div>
            <div id="g-error" class='alert alert-danger' style="display: none; margin-bottom: 0"></div>
            <div id="g-success" class='alert alert-success' style="display: none; margin-bottom: 0"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button id="btn-create" type="button" class="btn btn-primary">Create</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<!-- /.row -->
<div class="row">
    <div class="col-lg-9">
        <div class="panel panel-default">
            <div class="panel-heading">Threads
                <ul style="margin-top: -7px;" class="pagination pull-right">
                    <li class="paginate_button previous disabled">
                        <a><</a>
                    </li>
                    <li class="paginate_button active" >
                        <a>1/1</a>
                    </li>
                    <li class="paginate_button next">
                        <a>></a>
                    </li>
                </ul>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <h4>Thread Title</h4>
                <p>Thread Content</p>
            </div>

            <div class="panel-footer">

                <ul id="pm-list" class="pm">
