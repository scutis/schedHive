<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Profile</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Edit Profile
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-4">
                        <form role="form">
                            <div class="form-group">
                                <label>First Name</label>
                                <p class="form-control-static"><%= f_name%></p>
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                <p class="form-control-static"><%= l_name%></p>
                            </div>
                            <div class="form-group">
                                <label>Nickname</label>
                                <input id="p-n_name" type="text" value="<%= n_name%>" class="form-control" placeholder="Nickname">
                            </div>
                            <div class="form-group input-group">
                                <span class="input-group-addon">@</span>
                                <input id="p-email" type="email" value="<%= email%>" class="form-control" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label>User Name</label>
                                <p class="form-control-static"><%= u_name%></p>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input id="p-password" type="password" class="form-control" placeholder="Password">
                            </div>

                        </form>
                    </div>
                    <div class="col-lg-8">
                        <form role="form">
                            <div class="form-group">
                                <label>Profile Description</label>
                                <textarea id="p-profile" class="form-control" style="resize: vertical;" rows="10"><%= profile%></textarea>
                            </div>
                            <div class="modal-footer">
                                <button id="edit-pro" type="button" class="btn btn-primary">Update</button>
                                <button id="reset-pro" type="button" class="btn btn-default">Reset</button>
                                <br><br>
                                <div id="p-error" class='alert alert-danger' style="display: none; margin-bottom: 0"></div>
                                <div id="p-success" class='alert alert-success' style="display: none; margin-bottom: 0"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>