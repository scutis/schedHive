<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Member / <%= member.f_name %> <%= member.l_name %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-7">
        <div class="panel panel-default">
            <div class="panel-heading">
                Profile
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
               <span class='pm-img pull-left'> <div class="img-circle profile-img"><p><%= member.f_name.charAt(0).toUpperCase() %><%= member.l_name.charAt(0).toUpperCase() %></p></div></span>
                <h3><%= member.f_name %> <%= member.l_name %> (<%= member.n_name %>)</h3>
                <em>email: <%= member.email %></em><br>
                <p class="justify"><%= member.profile %></p>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
    <div class="col-lg-5">
        <div class="pm-panel panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-comments fa-fw"></i>
                Private Messages
                <div class="btn-group pull-right">
                    <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-chevron-down"></i>
                    </button>
                    <ul class="dropdown-menu slidedown">
                        <li>
                            <a id="refresh" style="cursor: pointer;">
                                <i class="fa fa-refresh fa-fw"></i> Refresh
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div id="pm-panel" class="panel-body">
                <ul id="pm-list" class="pm">
                </ul>
            </div>
            <!-- /.panel-body -->
            <div class="panel-footer">
                <div class="input-group">
                    <textarea id="message" class="form-control" rows="4" style="resize: vertical;" placeholder="Message" disabled="disabled"></textarea>
                    <span class="input-group-btn">
                        <button class="btn btn-primary btn-sm" id="send">Send</button>
                    </span>
                </div>
            </div>
            <!-- /.panel-footer -->
        </div>
    </div>
    <!-- /.col-lg-6 -->
</div>
